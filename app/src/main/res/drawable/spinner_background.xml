<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/pinkUtama" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/pinkTua" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/pinkTua" />
                    <corners android:radius="3dp" />
                </shape>
            </item>

            <item android:gravity="right">
                <bitmap android:antialias="true"  android:gravity="right" android:src="@drawable/ic_baseline_arrow_drop_down_24" />
            </item>
        </layer-list>
    </item>
</selector>